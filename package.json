{
	"name": "lumina-monorepo",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "lage build --scope '@lumina/sdk' '@lumina/contracts' --no-deps",
		"build:all": "lage build",
		"test:all": "echo 'testing...'",
		"lint:all": "lage lint",
		"format:all": "dprint check --verbose",
		"format:all:fix": "dprint fmt --verbose",
		"version": "changeset version && bun run format:fix",
		"publish:all": "pnpm run build && pnpm publish -r --no-git-checks --access public"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@changesets/cli": "^2.27.10",
		"@types/node": "^22.9.1",
		"dprint": "^0.47.5",
		"lage": "^2.11.15",
		"lint-staged": "^15.2.10",
		"simple-git-hooks": "^2.11.1",
		"taze": "^0.18.0",
		"typescript": "^5.6.3"
	},
	"engines": {
		"bun": "1.1.34",
		"node": "22.11.0",
		"pnpm": "9.14.2"
	},
	"packageManager": "pnpm@9.14.2",
	"simple-git-hooks": {
		"pre-commit": "pnpx lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,tsx,vue,md}": ["dprint fmt --verbose"]
	},
	"pnpm": {
		"patchedDependencies": {
			"o1js@1.7.0": "patches/o1js@1.7.0.patch",
			"@surma/rollup-plugin-off-main-thread": "patches/@surma__rollup-plugin-off-main-thread.patch"
		}
	}
}
